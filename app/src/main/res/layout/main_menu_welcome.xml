<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ScrollView">
    <LinearLayout
        android:id="@+id/layout"
        style="@style/FlippingPage"
        android:orientation="vertical">

        <app.tapsoffire.ui.components.FTextView
            style="@style/HeadText"
            android:text="@string/welcome_heading" />

        <TextView
            style="@style/ParagraphText"
            android:text="@string/welcome_text"/>

        <app.tapsoffire.ui.components.FireButton
            android:id="@+id/play_first_time"
            style="@style/FireButton"
            android:layout_marginTop="@dimen/margin"
            android:layout_gravity="center_horizontal"
            android:text="@string/play"/>

    </LinearLayout>
</ScrollView>